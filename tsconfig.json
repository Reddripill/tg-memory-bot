{
   "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "rootDir": "./src",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist"],
   "ts-node": {
      "esm": true
   }
}
